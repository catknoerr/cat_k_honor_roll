<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <!-- Devise Input for location start -->
          <div class="form-group">
            <% location_was_invalid = resource.errors.include?(:location) %>

            <% location_class = "form-control" %>

            <% if was_validated %>
              <% if location_was_invalid %>
                <% location_class << " is-invalid" %>
              <% else %>
                <% location_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :location %>

            <%= f.text_field :location, :class => location_class, :placeholder => "Enter location" %>

            <% if location_was_invalid %>
              <% resource.errors.full_messages_for(:location).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for location end -->

          <!-- Devise Input for username start -->
          <div class="form-group">
            <% username_was_invalid = resource.errors.include?(:username) %>

            <% username_class = "form-control" %>

            <% if was_validated %>
              <% if username_was_invalid %>
                <% username_class << " is-invalid" %>
              <% else %>
                <% username_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :username %>

            <%= f.text_field :username, :class => username_class, :placeholder => "Enter username" %>

            <% if username_was_invalid %>
              <% resource.errors.full_messages_for(:username).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for username end -->

          <!-- Devise Input for first_name start -->
          <div class="form-group">
            <% first_name_was_invalid = resource.errors.include?(:first_name) %>

            <% first_name_class = "form-control" %>

            <% if was_validated %>
              <% if first_name_was_invalid %>
                <% first_name_class << " is-invalid" %>
              <% else %>
                <% first_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :first_name %>

            <%= f.text_field :first_name, :class => first_name_class, :placeholder => "Enter first name" %>

            <% if first_name_was_invalid %>
              <% resource.errors.full_messages_for(:first_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for first_name end -->

          <!-- Devise Input for last_name start -->
          <div class="form-group">
            <% last_name_was_invalid = resource.errors.include?(:last_name) %>

            <% last_name_class = "form-control" %>

            <% if was_validated %>
              <% if last_name_was_invalid %>
                <% last_name_class << " is-invalid" %>
              <% else %>
                <% last_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :last_name %>

            <%= f.text_field :last_name, :class => last_name_class, :placeholder => "Enter last name" %>

            <% if last_name_was_invalid %>
              <% resource.errors.full_messages_for(:last_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for last_name end -->

          <!-- Devise Input for dm_id start -->
          <div class="form-group">
            <% dm_id_was_invalid = resource.errors.include?(:dm_id) %>

            <% dm_id_class = "form-control" %>

            <% if was_validated %>
              <% if dm_id_was_invalid %>
                <% dm_id_class << " is-invalid" %>
              <% else %>
                <% dm_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :dm_id %>

            <%= f.number_field :dm_id, :class => dm_id_class, :placeholder => "Enter dm id" %>

            <% if dm_id_was_invalid %>
              <% resource.errors.full_messages_for(:dm_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for dm_id end -->

          <!-- Devise Input for player_id start -->
          <div class="form-group">
            <% player_id_was_invalid = resource.errors.include?(:player_id) %>

            <% player_id_class = "form-control" %>

            <% if was_validated %>
              <% if player_id_was_invalid %>
                <% player_id_class << " is-invalid" %>
              <% else %>
                <% player_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :player_id %>

            <%= f.number_field :player_id, :class => player_id_class, :placeholder => "Enter player id" %>

            <% if player_id_was_invalid %>
              <% resource.errors.full_messages_for(:player_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for player_id end -->
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
