      <% end %>
    <% end %>

    <%= f.label :player_id %>
    <%= f.collection_select :player_id, Player.all, :id, :to_s, {}, class: "form-control" %>
    <% if player_was_invalid %>
      <% user.errors.full_messages_for(:player).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
