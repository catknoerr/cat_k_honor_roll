    <% if was_validated %>
      <% if last_name_was_invalid %>
        <% last_name_class << " is-invalid" %>
      <% else %>
        <% last_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: last_name_class, placeholder: "Enter last name" %>
    <% if last_name_was_invalid %>
      <% user.errors.full_messages_for(:last_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dm_class = "form-control" %>
    <% dm_was_invalid = user.errors.include?(:dm) %>

    <% if was_validated %>
      <% if dm_was_invalid %>
        <% dm_class << " is-invalid" %>
      <% else %>
        <% dm_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dm_id %>
    <%= f.collection_select :dm_id, Dungeonmaster.all, :id, :to_s, {}, class: "form-control" %>
    <% if dm_was_invalid %>
      <% user.errors.full_messages_for(:dm).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% player_class = "form-control" %>
