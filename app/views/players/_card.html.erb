<div class="card mb-3">
  <h2 class="card-header h4">
    Player #<%= player.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Username</dt>
      <dd><%= player.username %></dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @player.photo, class: "img-fluid" %>
      </dd>

      <dt>Location</dt>
      <dd>
        <div>
          <%= render partial: "players/one_photo_map" %>
        </div>
      </dd>

      <dt>Age</dt>
      <dd><%= player.age %></dd>

      <dt>Description</dt>
      <dd><%= player.description %></dd>

      <dt>Preferences</dt>
      <dd><%= player.preferences %></dd>

      <dt>Characters</dt>
      <dd><%= player.characters %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back player, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_player_url(player), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to player, method: :delete, data: { confirm: "Do you really want to delete this player?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(player.updated_at) %> ago
  </div>
</div>
