<% was_validated = game.errors.any? %>

<%= form_with(model: game, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for dm_id start -->
  <div class="form-group">
    <% dm_class = "form-control" %>
    <% dm_was_invalid = game.errors.include?(:dm) %>

    <% if was_validated %>
      <% if dm_was_invalid %>
        <% dm_class << " is-invalid" %>
      <% else %>
        <% dm_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dm_id %>
    <!-- Input for dm_id start -->
    <%= f.number_field :dm_id, class: dm_class, placeholder: "Enter dm" %>
    <!-- Input for dm_id end -->
    <% if dm_was_invalid %>
      <% game.errors.full_messages_for(:dm).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dm_id end -->
  <!-- Label and input for player_id start -->
  <div class="form-group">
    <% player_class = "form-control" %>
    <% player_was_invalid = game.errors.include?(:player) %>

