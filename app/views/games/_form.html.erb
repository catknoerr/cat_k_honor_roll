    <%= f.time_select :time, class: time_class, placeholder: "Enter time" %>
    <!-- Input for time end -->
    <% if time_was_invalid %>
      <% game.errors.full_messages_for(:time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
