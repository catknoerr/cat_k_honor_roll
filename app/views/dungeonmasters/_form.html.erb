        <% character_class << " is-invalid" %>
      <% else %>
        <% character_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :characters %>
    <%= f.text_field :characters, class: character_class, placeholder: "Enter character" %>
    <% if character_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:character).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
