<% was_validated = dungeonmaster.errors.any? %>

<%= form_with(model: dungeonmaster, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = dungeonmaster.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% preference_class = "form-control" %>
    <% preference_was_invalid = dungeonmaster.errors.include?(:preference) %>

    <% if was_validated %>
      <% if preference_was_invalid %>
        <% preference_class << " is-invalid" %>
      <% else %>
        <% preference_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :preferences %>
    <%= f.text_field :preferences, class: preference_class, placeholder: "Enter preference" %>
    <% if preference_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:preference).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = dungeonmaster.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
    <% if photo_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% years_experience_class = "form-control" %>
    <% years_experience_was_invalid = dungeonmaster.errors.include?(:years_experience) %>

    <% if was_validated %>
      <% if years_experience_was_invalid %>
        <% years_experience_class << " is-invalid" %>
      <% else %>
        <% years_experience_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :years_experience %>
    <%= f.number_field :years_experience, class: years_experience_class, placeholder: "Enter years experience" %>
    <% if years_experience_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:years_experience).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% age_class = "form-control" %>
    <% age_was_invalid = dungeonmaster.errors.include?(:age) %>

    <% if was_validated %>
      <% if age_was_invalid %>
        <% age_class << " is-invalid" %>
      <% else %>
        <% age_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :age %>
    <%= f.number_field :age, class: age_class, placeholder: "Enter age" %>
    <% if age_was_invalid %>
      <% dungeonmaster.errors.full_messages_for(:age).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% character_class = "form-control" %>
    <% character_was_invalid = dungeonmaster.errors.include?(:character) %>

    <% if was_validated %>
