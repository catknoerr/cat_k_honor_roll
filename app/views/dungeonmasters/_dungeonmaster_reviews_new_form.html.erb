<%= form_with(model: @review, local: true) do |f| %>

  <%= f.hidden_field :dm_id, value: @dungeonmaster.id %>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :reviewer_id %>

    <%= f.collection_select :reviewer_id, Player.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review %>

    <%= f.text_field :review, class: "form-control" %>
  </div>

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
